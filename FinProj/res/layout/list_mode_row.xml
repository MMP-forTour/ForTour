<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ftLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="70dp"
        android:padding="4dp" 
        android:background="@drawable/listitem_g">

        <ImageView
            android:scaleType="centerInside"
            android:id="@+id/imageViewLMRImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:src="@drawable/icon" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewLMRTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textAppearance="?android:attr/textAppearanceMedium" android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/textViewLMRTime"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Timestamp"
                android:textColor="#FFFFEB"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/checkBoxLMRCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="6dp"
            android:gravity="center_vertical"
            android:text=""
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>