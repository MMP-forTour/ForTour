<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/book_bg"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="0.01" >

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical" android:layout_weight="1">

            <FrameLayout
                android:id="@+id/frameLayout3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.01" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="to create margin"
                    android:visibility="invisible" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frameLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2">

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >

                    <EditText
            			android:id="@+id/editTextOPTitle"
            			android:layout_width="wrap_content"
            			android:layout_height="fill_parent"
            			android:layout_gravity="center_vertical|center"
            			android:hint="Title......................."
            			android:singleLine="true" android:layout_marginTop="10dp" android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/textViewOPTitle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="Title of Story"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="40dp"
                        android:visibility="gone" />

                    <ImageButton
                        android:id="@+id/buttonOPRecord"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:scaleType="centerInside"
                        android:src="@drawable/btn_rec" />

                    <ImageButton
                        android:id="@+id/buttonOPPlay"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:scaleType="centerInside"
                        android:visibility="gone" 
                        android:src="@drawable/btn_play" />

                    <ImageButton
                        android:id="@+id/buttonOPOK"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:scaleType="centerInside" 
                        android:src="@drawable/btn_save" 
                        android:background="#00000000" 
                        android:layout_marginRight="10dp" 
                        android:layout_marginTop="5dp"/>

                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frameLayout1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="25dp"
                android:layout_weight="2.5" >

                <ImageView
                    android:id="@+id/note"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/photo_frame" />

                <ImageView
                    android:id="@+id/imageViewOPImage"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal" />

                <ImageView
                    android:id="@+id/pframe"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/photo_frame" />

                <EditText
                    android:id="@+id/editTextOPStory"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:background="#00000000"
                    android:hint="About this Story..."
                    android:singleLine="true" 
                    android:layout_marginBottom="50dp"/>

                <ImageButton
                    android:id="@+id/emotion_sticker"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="64dp"
                    android:background="#00000000"
                    android:scaleType="centerInside"
                    android:src="@drawable/no_mood1" />

                <TextView
                    android:id="@+id/textViewOPStory"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="50dp"
                    android:maxLines="2"
                    android:text="About this Story..."
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frameLayout2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="6.3" >

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/buttonOPLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:scaleType="centerInside"
                        android:layout_gravity="left" 
                        android:src="@drawable/btn_locate" 
                        android:layout_weight="0.2" 
                        android:layout_marginLeft="10dp" 
                        android:layout_marginBottom="10dp"/>

                    <LinearLayout
                        android:id="@+id/linearLayout7"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/textViewOPTime"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="Time of Story..."
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/black"
                            android:visibility="gone" android:singleLine="true"/>

                        <LinearLayout
                            android:id="@+id/linearLayout8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top" >

                            <EditText
                                android:id="@+id/editTextOPDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="YYYY/MM/DD"
                                android:background="#00000000" 
                                android:editable="false" 
                                android:cursorVisible="false"
                                android:clickable="true"/>

                            <EditText
                                android:id="@+id/editTextOPTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="hh:ss" 
                                android:background="#00000000" 
                                android:layout_marginLeft="5dp" 
                                android:editable="false" 
                                android:cursorVisible="false"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/textViewOPLocation"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Location of Story..."
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/black"
                            android:visibility="gone" />

                        <EditText
                            android:id="@+id/editTextOPLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:hint="Location of Story..."
                            android:singleLine="true" android:layout_gravity="bottom"/>
                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="7.1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="10"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/frameLayout4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <ImageButton
                    android:id="@+id/ques"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/btn_ques"
                    android:scaleType="centerInside" 
                    android:background="#00000000" android:layout_gravity="bottom|right"/>

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>
 
</LinearLayout>