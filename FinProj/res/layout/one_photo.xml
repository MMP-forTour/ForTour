<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/bg_one_photo" android:weightSum="1">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:id="@+id/title" android:text="About the photo" android:textSize="24dp" android:layout_marginTop="5dp"></TextView>
    <ImageView android:src="@drawable/icon" android:id="@+id/photo" android:layout_gravity="center" android:layout_height="231dp" android:layout_width="253dp" android:layout_marginTop="50dp"></ImageView>
    <FrameLayout android:layout_width="match_parent" android:layout_height="66dp" android:id="@+id/frameStory">
        <EditText android:layout_height="wrap_content" android:inputType="textMultiLine" android:layout_gravity="center" android:background="#00000000" android:layout_width="224dp" android:hint="填寫照片小故事 :D" android:id="@+id/editStory">
            <requestFocus></requestFocus>
        </EditText>
    </FrameLayout>
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/frameLocation">
        <EditText android:layout_height="wrap_content" android:inputType="textPostalAddress" android:id="@+id/editLocation" android:background="#00000000" android:layout_width="280dp" android:layout_gravity="center"></EditText>
    </FrameLayout>
    
</LinearLayout>
